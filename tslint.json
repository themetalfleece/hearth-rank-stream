{
    "extends": "tslint:recommended",
    "parser": "typescript-eslint-parser",
    "rules": {
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "max-classes-per-file": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "no-floating-promises": {
            "severity": "error"
        },
        "semicolon": {
            "severity": "error"
        },
        "object-literal-sort-keys": {
            "severity": "off"
        },
        "quotemark": {
            "severity": "warning",
            "options": [
                "single"
            ]
        },
        "no-var-requires": {
            "severity": "error"
        },
        "trailing-comma": {
            "severity": "warning",
            "options": [
                {
                    "multiline": {
                        "objects": "always",
                        "arrays": "always",
                        "typeLiterals": "ignore"
                    }
                }
            ]
        },
        "one-variable-per-declaration": {
            "severity": "warning"
        },
        "no-empty-interface": {
            "severity": "warning"
        },
        "variable-name": {
            "severity": "off",
            "options": [
                "check-format",
                "allow-leading-underscore",
                "allow-pascal-case"
            ]
        },
        "prefer-const": {
            "severity": "warning"
        },
        "space-before-function-paren": {
            "severity": "off"
        },
        "arrow-parens": {
            "severity": "off"
        },
        "object-literal-shorthand": {
            "severity": "warning"
        },
        "only-arrow-functions": {
            "severity": "error"
        },
        "max-line-length": [
            false
        ],
        "no-string-literal": {
            "severity": "warning"
        },
        "eofline": {
            "severity": "warn"
        },
        "no-trailing-whitespace": {
            "severity": "warn",
            "options": [
                "ignore-template-strings",
                "ignore-comments",
                "ignore-jsdoc",
                "ignore-blank-lines"
            ]
        },
        "no-unused-expression": {
            "severity": "error"
        },
        "member-access": {
            "severity": "error"
        },
        "prefer-for-of": {
            "severity": "warning"
        },
        "curly": {
            "severity": "error"
        },
        "object-literal-key-quotes": {
            "severity": "warning",
            "options": [
                "consistent-as-needed"
            ]
        },
        "forin": {
            "severity": "error"
        },
        "arrow-return-shorthand": {
            "severity": "warning"
        },
        "jsdoc-format": {
            "severity": "warning"
        },
        "no-shadowed-variable": {
            "severity": "off"
        },
        "one-line": {
            "severity": "warning"
        },
        "ordered-imports": {
            "severity": "warning"
        },
        "interface-name": {
            "severity": "off"
        }
    }
}